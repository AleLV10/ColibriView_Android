<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PlanQuestTestLantern">
    <ImageView
        android:id="@+id/imagenArriba"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="10dp"
        android:contentDescription="imagenInicio"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenAbajo"
        />

    <ImageView
        android:id="@+id/imagenAbajo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:contentDescription="imagenInicio"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/imagenArriba"
        app:layout_constraintBottom_toTopOf="@id/arriba"
        />
    <TextView
        android:id="@+id/arriba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Arriba"
        android:textStyle="bold"
        android:textSize="@dimen/tamaño_letra_titulo"
        android:layout_marginHorizontal="@dimen/common_padding_default"
        app:layout_constraintBottom_toTopOf="@id/radioGroupArriba"
        app:layout_constraintTop_toBottomOf="@id/imagenAbajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />



    <RadioGroup
        android:id="@+id/radioGroupArriba"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/common_padding_default"
        app:layout_constraintBottom_toTopOf="@id/abajo"
        app:layout_constraintTop_toBottomOf="@id/arriba"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        >

        <RadioButton
            android:id="@+id/radio_verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verde"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />

        <RadioButton
            android:id="@+id/radio_amarillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amarillo"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />

        <RadioButton
            android:id="@+id/radio_rojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rojo"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />
    </RadioGroup>

    <TextView
        android:id="@+id/abajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Abajo"
        android:textStyle="bold"
        android:textSize="@dimen/tamaño_letra_titulo"
        android:layout_marginHorizontal="@dimen/common_padding_default"
        app:layout_constraintTop_toBottomOf="@id/radioGroupArriba"
        app:layout_constraintBottom_toTopOf="@id/radioGroupAbajo"
        />

    <RadioGroup
        android:id="@+id/radioGroupAbajo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginHorizontal="@dimen/common_padding_default"
        app:layout_constraintTop_toBottomOf="@id/abajo"
        app:layout_constraintBottom_toBottomOf="@id/siguiente"
        >

        <RadioButton
            android:id="@+id/Aradio_verde"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Verde"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />

        <RadioButton
            android:id="@+id/Aradio_amarillo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Amarillo"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />

        <RadioButton
            android:id="@+id/Aradio_rojo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rojo"
            android:layout_marginHorizontal="@dimen/common_padding_min"
            android:textSize="@dimen/tamaño_letra_subtitulo"
            />
    </RadioGroup>
    <Button
        android:id="@+id/siguiente"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="@string/nose"
        android:textStyle="bold"
        android:textSize="@dimen/tamaño_letra_subtitulo"
        android:layout_marginTop="@dimen/margin4"
        android:layout_marginHorizontal="@dimen/margin3"
        android:layout_marginBottom="10dp"
        android:textColor="@color/moradoo"
        app:layout_constraintTop_toBottomOf="@id/radioGroupAbajo"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:theme="@style/Theme.MaterialComponents.DayNight.Dialog.Bridge"
        />
</androidx.constraintlayout.widget.ConstraintLayout>