<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ishihara.ishijara3">


    <include
        android:id="@+id/mnu_barra_ishihara2"
        layout="@layout/activity_base"/>

    <ImageView
        android:id="@+id/ti2"
        android:layout_width="400dp"
        android:layout_height="350dp"
        android:src="@drawable/is2"
        android:layout_marginTop="@dimen/margin_top"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        />

    <androidx.appcompat.widget.LinearLayoutCompat
        android:layout_width="match_parent"
        android:layout_height="120dp"
        app:layout_constraintTop_toBottomOf="@+id/ti2"
        app:layout_constraintEnd_toEndOf="@+id/ti2"
        android:layout_marginTop="@dimen/margin_top2"
        >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <Button
                android:id="@+id/boton1"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin3"
                android:text="@string/numero"
                android:textSize="@dimen/tamaño_letra_titulo"
                android:backgroundTint="@color/moradoo"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <Button
                android:id="@+id/boton2"
                android:layout_width="100dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin3"
                android:text="6"
                android:textSize="@dimen/tamaño_letra_titulo"
                android:backgroundTint="@color/moradoo"
                app:layout_constraintStart_toEndOf="@+id/boton1"
                app:layout_constraintTop_toTopOf="@id/boton1"
                />


            <Button
                android:id="@+id/boton3"
                android:layout_width="110dp"
                android:layout_height="90dp"
                android:layout_marginLeft="@dimen/margin3"
                android:text="NADA"
                android:textSize="@dimen/tamaño_letra_sub_subtitulo"
                android:backgroundTint="@color/moradoo"
                app:layout_constraintStart_toEndOf="@+id/boton2"
                app:layout_constraintTop_toTopOf="@id/boton2"
                />


        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.appcompat.widget.LinearLayoutCompat>

</androidx.constraintlayout.widget.ConstraintLayout>