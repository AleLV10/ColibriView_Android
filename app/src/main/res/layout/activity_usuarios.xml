<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >


    <TextView
        android:id="@+id/nombre"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:text="Nombre"
        android:textAlignment="center"
        android:textStyle="bold"
        android:textSize="@dimen/tama単o_letra_subtitulo"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <com.google.android.material.card.MaterialCardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_margin="@dimen/margin5"
        android:padding="@dimen/margin5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/nombre"
        app:layout_constraintEnd_toEndOf="parent"
        android:clickable="true"
        android:focusable="true"
        >
        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <ImageView
                    android:id="@+id/img"
                    android:layout_width="60dp"
                    android:layout_height="55dp"
                    android:src="@drawable/seis"
                    android:layout_marginLeft="@dimen/margin3"
                    android:layout_marginTop="@dimen/margin5"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    />

                <TextView
                    android:id="@+id/nomtest"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Nombre del test"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textSize="28dp"
                    android:layout_marginTop="15dp"
                    app:layout_constraintTop_toTopOf="@id/img"
                    app:layout_constraintStart_toEndOf="@id/img"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/fecha"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Date"
                    android:layout_marginStart="10dp"
                    android:layout_marginTop="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/moradoo"
                    android:textSize="22dp"
                    app:layout_constraintTop_toBottomOf="@id/nomtest"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/Lugar"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Lugar"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/moradoo"
                    android:textSize="22dp"
                    app:layout_constraintTop_toBottomOf="@id/fecha"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/Anos"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="Anos"
                    android:layout_marginStart="10dp"
                    android:textStyle="bold"
                    android:textColor="@color/moradoo"
                    android:textSize="22dp"
                    app:layout_constraintTop_toBottomOf="@id/Lugar"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    />
                <TextView
                    android:id="@+id/correctas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    tools:text="@string/correctas"
                    android:textStyle="bold"
                    android:textColor="@color/grisf"
                    android:textSize="@dimen/tama単o_letra_sub_subtitulo"
                    app:layout_constraintStart_toStartOf="@id/Anos"
                    app:layout_constraintTop_toBottomOf="@id/Anos"
                    app:layout_constraintEnd_toEndOf="@id/Anos"
                    />


                <TextView
                    android:id="@+id/diag"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    tools:text="@string/diagnostico"
                    android:textSize="@dimen/tama単o_letra_sub_subtitulo"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="@id/correctas"
                    app:layout_constraintTop_toBottomOf="@id/correctas"
                    app:layout_constraintEnd_toEndOf="@id/correctas"
                    android:layout_marginHorizontal="10dp"
                    />
                <TextView
                    android:id="@+id/Respuestas"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin5"
                    tools:text="Respuestas"
                    android:textStyle="bold"
                    android:textColor="@color/grisf"
                    android:textSize="@dimen/tama単o_letra_sub_subtitulo"
                    app:layout_constraintStart_toStartOf="@id/fecha"
                    app:layout_constraintTop_toBottomOf="@id/diag"
                    app:layout_constraintEnd_toEndOf="@id/diag"
                    />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>


    </com.google.android.material.card.MaterialCardView>

</androidx.constraintlayout.widget.ConstraintLayout>